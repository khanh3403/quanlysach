<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tvMaSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sách"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tvTenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách: java 1"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvGiaThue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá thuê: 1000"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/tvLoaiSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sách: CNTT"
            android:textSize="16dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgDel_s"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_delete"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"/>

</androidx.cardview.widget.CardView>