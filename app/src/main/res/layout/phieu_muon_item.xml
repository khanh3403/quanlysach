<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="4.5">

            <TextView
                android:id="@+id/tvMaPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu: 1"/>
            <TextView
                android:id="@+id/tvTenTV_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành Viên: Hai"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvTenSach_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sách:"
                android:textStyle="bold"
                android:textSize="19dp"/>
            <TextView
                android:id="@+id/tvTienThue_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thuê: 1000"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tvTraSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa trả sách"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/tvGio_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Giờ: 12:00"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvNgay_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thuê: 2020-09-08"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgDel_pm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete"
        android:layout_gravity="right"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp"/>

</androidx.cardview.widget.CardView>