<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="1000dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phiếu mượn"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:background="#F67349"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phiếu mượn"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/edMaPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spnMaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>
        <Spinner
            android:id="@+id/spnMaSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>
<!--        =====================-->
        <EditText
            android:id="@+id/edGio"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:hint="Giờ"
            android:layout_marginStart="20dp"/>
<!--        =====================-->
        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ngày: "
            android:textSize="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/tvTienThue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="Tiền thuê: "
            android:textSize="18dp"/>
        <CheckBox
            android:id="@+id/chkTraSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Đã trả sách"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnCancel_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#76E87A"
            android:textColor="#171717"/>
        <Button
            android:id="@+id/btnSave_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#76E87A"
            android:textColor="#171717"/>

    </LinearLayout>

</LinearLayout>